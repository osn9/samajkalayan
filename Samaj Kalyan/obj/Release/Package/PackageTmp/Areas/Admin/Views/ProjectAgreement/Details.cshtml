        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Program_Cost)
                </b>

            </span>
            @Html.DisplayFor(x => x.Program_Cost)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Project_Period)
                </b>

            </span>
            @Html.DisplayFor(x => x.Project_Period)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.No_Of_Expertriate)
                </b>

            </span>
            @Html.DisplayFor(x => x.No_Of_Expertriate)
        </div>
    </fieldset>
    <fieldset class="border p-1">
        <legend>
            साझेदारहरू
        </legend>
        @foreach (var item in Model.PA_PartnerNgoViewModelList)
        {
            <div class="row">
                <span class="col-md-6">
                    <b>
                        @Html.DisplayNameFor(x => item.Ngo_Name)
                    </b>

                </span>
                @Html.DisplayFor(x => item.Ngo_Name)
            </div>
            <div class="row">
                <span class="col-md-6">
                    <b>
                        @Html.DisplayNameFor(x => item.Ngo_Number)
                    </b>

                </span>
                @Html.DisplayFor(x => item.Ngo_Number)
            </div>

            <div class="row">
                <span class="col-md-6">
                    <b>
                        @Html.DisplayNameFor(x => item.Amount)
                    </b>

                </span>
                @Html.DisplayFor(x => item.Amount)
            </div>
        }
        <hr />

    </fieldset>
