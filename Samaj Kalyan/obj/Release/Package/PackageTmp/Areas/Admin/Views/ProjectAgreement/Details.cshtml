@model Samaj_Kalyan.Areas.Admin.Models.ProjectAgreementViewModel

<div style="margin-top:10px">
    <fieldset>
        <legend></legend>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.IngoName)
                </b>

            </span>
            @*@Model.DateOfJoining.Value.ToShortDateString()*@
            @*@Html.DisplayFor(x=>x.DOJNepali)*@
            @Html.DisplayFor(x => x.IngoName)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Name_Of_Project)
                </b>

            </span>
            @*@Model.DateOfJoining.Value.ToShortDateString()*@
            @*@Html.DisplayFor(x=>x.DOJNepali)*@
            @Html.DisplayFor(x => x.Name_Of_Project)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Name_Of_Project_Nepali)

                </b>

            </span>
            @Html.DisplayFor(x => x.Name_Of_Project_Nepali)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.PA_Sign_Date)
                </b>

            </span>
         
            @{
                if (Model.PA_Sign_Date.HasValue)
                {
                    var sdate = Model.PA_Sign_Date.Value.ToShortDateString();
                    <span>
                        @*@sdate*@
                        @Html.DisplayFor(x => x.Pa_Sign_DateNepali)
                    </span>
                }

            }
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Doner)
                </b>

            </span>
            @Html.DisplayFor(x => x.Doner)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Name_Of_Bank)
                </b>

            </span>
            @Html.DisplayFor(x => x.Name_Of_Bank)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Account_NO)
                </b>

            </span>
            @Html.DisplayFor(x => x.Account_NO)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Total_Budget)
                </b>

            </span>
            @Html.DisplayFor(x => x.Total_Budget)
        </div>
        <div class="row">
            <span class="col-md-6">
                <b>
                    @Html.DisplayNameFor(x => x.Admin_Cost)
                </b>

            </span>
            @Html.DisplayFor(x => x.Admin_Cost)
